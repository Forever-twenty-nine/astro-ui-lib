---
import Typography from "../ui/Typography.astro";
import Container from "../scaffolding/Container.astro";
import Section from "../scaffolding/Section.astro";

interface Paragraph {
  tag?: string;      
  class?: string;
  content: string;
}

interface Props {
    sectionId?: string;
    sectionClass?: string;
    containerId?: string;
    containerClass?: string;
    tagTitle?: string;
    tagClass?: string;
    title?: string;
    titleClass?: string;
    imageSrc?: string;
    imageAlt?:string;
    imageClass?: string;
    paragraphs?: {
        tag?: string;
        content: string;
        class?: string;
    }[];
}

const {
    sectionId,
    sectionClass,
    containerId,
    containerClass,
    tagTitle,
    tagClass,
    title,
    titleClass,
    imageSrc,
    imageAlt,
    imageClass,
    paragraphs = [],
} = Astro.props
---

<Section
    id={sectionId}
    class={`${sectionClass}`}
>

    <Container
        id={containerId}
        class={containerClass}
    >
    <div class="flex flex-col-reverse md:flex-row items-center justify-between gap-12">
        
        <!-- left -->
        <div class="md:w-1/2">
            {imageSrc &&(
                <img
                    src={imageSrc}
                    alt={imageAlt}
                    loading="lazy"
                    class={`w-full rounded-xl shadow-lg ${imageClass ?? ""}`}
                />
            )}
            
        </div>

        <!-- right -->
        <div class="md:w-1/2 text-center md:text-left">
            <Typography
                tag="small"
                class={`uppercase text-blue-600 tracking-widest font-bold mb-2 ${tagClass}`}>
                {tagTitle}
            </Typography>
            <Typography
                tag="h2"
                class={`mb-6 ${titleClass}`}>
                {title}
            </Typography>

            {paragraphs.map(({ tag = "p", content, class: paragraphClass }, i) => (
                <Typography 
                    tag={tag} 
                    class={`text-gray-600 mb-4 ${paragraphClass ?? ""}`} 
                    set:html={content}
                    key={i}
                />
            ))}
        </div>
    </div>

    </Container>
</Section>
