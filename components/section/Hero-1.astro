---
import Typography from "../ui/Typography.astro";
import Container from "../scaffolding/Container.astro";
import Section from "../scaffolding/Section.astro";
import Button from "../ui/Button.astro";

interface Props {
    sectionId?: string;
    sectionClass?: string;
    containerId?: string;
    containerClass?: string;
    title?: string;
    titleClass?: string;
    description?: string;
    descriptionClass?: string;
    buttonHref?: string;
    buttonText?: string
    imageSrc?: string;
    imageAlt?: string
}

const {
    sectionId,
    sectionClass,
    containerId,
    containerClass,
    title,
    titleClass,
    description,
    descriptionClass,
    buttonHref,
    buttonText,
    imageSrc,
    imageAlt
} = Astro.props

---

<Section
    id={sectionId}
    class={`bg-gradient-to-br from-secondary-700 via-secondary-800 to-secondary-900 ${sectionClass}`}
>
    <Container
        id={containerId}
        class={containerClass}
    >
        <div class="flex flex-col-reverse md:flex-row items-center justify-between gap-12">
            
            {/* left */}
            <div 
                class="md:w-1/2 text-center md:text-left"
            >
                <Typography 
                    tag="h1"
                    class={`mb-6 text-white ${titleClass}`}>
                    {title}
                </Typography>

                <Typography
                    class={`mb-8 text-info-200 ${descriptionClass}`}>
                    {description}
                </Typography>
                <Button
                    href={buttonHref}>
                    {buttonText}
                </Button>
            </div>
            
            {/* right */}
            <div class="md:w-1/2">
                <img 
                    src={imageSrc} 
                    alt={imageAlt}
                    loading="lazy"
                    class="w-full rounded-xl shadow-lg">
            </div>

        </div>
    </Container>
</Section>