{
  "name": "@forever-twenty-nine/astro-ui-lib",
  "version": "0.1.2",
  "type": "module",
  "description": "A library of reusable Astro components styled with Tailwind CSS.",
  "files": [
    "dist"
  ],
  "keywords": [
    "astro",
    "components",
    "ui",
    "tailwind",
    "library"
  ],
  "author": "FTN",
  "license": "MIT",
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@tailwindcss/vite": "^4.1.4",
    "fs-extra": "^11.3.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "astro dev",
    "copy:components": "node scripts/copy-components.cjs",
    "generate:index": "node scripts/generate-index.cjs",
    "prepare:dist": "npm run copy:components && npm run generate:index",
    "publish": "npm run prepare:dist"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Forever-twenty-nine/astro-ui-lib.git"
  },
  "peerDependencies": {
    "astro": "^5.7.5",
    "tailwindcss": "^4.1.4"
  }
}
