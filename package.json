{
  "name": "@forever-twenty-nine/astro-ui-lib",
  "version": "0.1.23",
  "type": "module",
  "description": "A library of reusable Astro components styled with Tailwind CSS.",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "astro",
    "components",
    "ui",
    "tailwind",
    "library"
  ],
  "author": "FTN",
  "license": "MIT",
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@tailwindcss/vite": "^4.1.4",
    "fs-extra": "^11.3.0",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "dev": "astro dev",
    "copy:components": "node scripts/copy-components.cjs",
    "generate:index": "node scripts/generate-index.cjs",
    "prepare:dist": "npm run copy:components && npm run generate:index",
    "build": "npm run prepare:dist",
    "preversion": "npm run prepare:dist",
    "version": "node scripts/log-version.cjs",
    "postversion": "git push && git push --tags",
    "release": "standard-version",
    "release:patch": "standard-version --release-as patch",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Forever-twenty-nine/astro-ui-lib.git"
  },
  "homepage": "https://github.com/Forever-twenty-nine/astro-ui-lib#readme",
  "bugs": {
    "url": "https://github.com/Forever-twenty-nine/astro-ui-lib/issues"
  },
  "peerDependencies": {
    "astro": "^5.7.5",
    "tailwindcss": "^4.1.4"
  }
}
