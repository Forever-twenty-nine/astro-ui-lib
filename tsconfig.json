{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "jsx": "preserve", 
    "allowJs": true,   
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true, 
    "isolatedModules": true, 
    "types": ["astro/client"],
    "strict": true 
  },
  
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}