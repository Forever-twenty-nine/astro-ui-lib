---
interface Link {
    href: string;
    text: string;
    navLinkClass: string;
}

const {
    id: idName = "",
    class: className = "",
    links = [],
    navLinkClass="",
} = Astro.props;

---
{links.length > 0 && (
    <nav
        id={idName || undefined} 
        class={` bg-white shadow md:shadow-none md:bg-transparent absolute top-0 right-0 w-2/3 h-screen translate-x-full md:-translate-x-0 transition-transform duration-300 z-20 md:!relative md:h-auto md:!w-auto ${className}`}>
        <ul
            class="flex flex-col text-center pt-20 md:flex-row md:!pt-0"
        >
            {
                links.map((link: Link) => (
                    <li>
                        <a
                            href={link.href}
                            class={`text-xl mb-4 md:text-base md:!mb-0 font-normal text-gray-700 px-3 py-2 block transition duration-200 hover:text-blue-600 ${navLinkClass} `}
                        >
                            {link.text}
                        </a>
                    </li>
                ))
            }
        </ul>
    </nav>
)}