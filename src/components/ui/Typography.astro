---
interface Props {
  tag?: "h1" | "h2" | "h3" | "h4" | "h5" | "h6" | "p" | "small";
  variant?: "default" | "muted";
}

const { tag = "p", variant = "default" }: Props = Astro.props;

const baseClasses = {
  h1: "text-6xl font-bold",
  h2: "text-4xl font-bold",
  h3: "text-3xl font-bold",
  h4: "text-2xl font-bold",
  h5: "text-xl font-bold",
  h6: "text-lg font-bold",
  p: "text-base",
  small: "text-sm",
};

const variantClasses = {
  default: "",
  muted: "text-gray-400",
};

const classes = `${baseClasses[tag] || baseClasses.h3} ${variantClasses[variant]}`;
const Tag = tag;
---

<Tag class={classes}>
  <slot />
</Tag>
