---
interface Props {
    favicon?: string;
    includeManifest?: boolean;
    themeColor?: string;
}

const {
    favicon = "/favicon.svg",
    includeManifest = true,
    themeColor = "#ffffff",
} = Astro.props;
---

<!-- Favicon -->
<link rel="icon" type="image/svg+xml" href={favicon} />

<!-- Manifest opcional -->
{includeManifest && <link rel="manifest" href="/site.webmanifest" />}

<!-- Theme color -->
<meta name="theme-color" content={themeColor} />
