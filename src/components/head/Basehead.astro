---
import Metadata from "../head/Metadata.astro";
import Favicon from "../head/Favicon.astro";

interface Props {
    site: string;
    title: string;
    description: string;
    url?: string;
    author?: string;
    image?: string;
    favicon?: string;
    themeColor?: string;
}

const props = Astro.props;
---

<Metadata
    site={props.site}
    title={props.title}
    description={props.description}
    url={props.url}
    author={props.author}
    image={props.image}
/>

<Favicon favicon={props.favicon} themeColor={props.themeColor} />
