---
interface Props {
  id?: string;
  variant?: "default" | "compact";
}

const {
  id: idName = '',
  variant = 'default',
}: Props = Astro.props;

const paddingClass = variant === "compact" ? "px-4" : "px-6";
---

<div    
  id={idName || undefined}
  class={`max-w-7xl mx-auto ${paddingClass}`}
>
  <slot />
</div>

