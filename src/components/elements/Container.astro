---
interface Props {
  id?: string;
  variant?: "default" | "compact";
  class?: string;
}

const {
  id: idName = "",
  variant = "default",
  class: extraClass = "",
}: Props = Astro.props;

const validVariants = {
  default: "px-6",
  compact: "px-4",
};

const paddingClass = validVariants[variant] ?? validVariants.default;

// Clase base segura para purge
const baseClass = `max-w-7xl mx-auto ${paddingClass}`;
const finalClass = `${baseClass} ${extraClass}`.trim();
---

<div id={idName || undefined} class={finalClass}>
  <slot />
</div>
