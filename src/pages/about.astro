---
import Layout from "../layouts/Layout.astro";
import About1 from "../lib/components/sections/about/About1.astro";
import About2 from "../lib/components/sections/about/About2.astro";
import Typography from "../lib/components/ui/Typography.astro";
import Section from "../lib/components/elements/Section.astro";

import heroImage from "../assets/hero-1.jpg";

const aboutData = {
    tagTitle: "Sobre Nosotros",
    title: "El Propósito Detrás de la Librería",
    image: heroImage,
    imageAlt: "Imagen local de ejemplo para la sección About1",
    paragraphs: [
        {
            content:
                "Esta librería proporciona una colección de componentes Astro pre-diseñados y fáciles de usar.",
        },
        {
            content:
                'Los componentes están construidos con Tailwind CSS y diseñados para ser flexibles y personalizables. Puedes usar <strong>negrita</strong>, <em>cursiva</em>, o incluso <a href="#">enlaces</a> si la prop de contenido lo permite.',
            tag: "p",
            class: "mt-4 text-gray-700",
        },
        {
            content: "Ideal para acelerar el desarrollo de tus proyectos web.",
            tag: "small",
            class: "block mt-4 text-gray-600",
        },
    ],
};

const aboutData2 = {
    tagTitle: "Quiénes Somos",
    title: "Conocé nuestra historia",
    image: heroImage,
    imageAlt: "Imagen local para About2",
    paragraphs: [
        {
            content:
                "Nuestro equipo está dedicado a crear interfaces modernas y accesibles.",
        },
        {
            content:
                "Explorá nuestros <strong>componentes reutilizables</strong> y adaptables a cualquier proyecto web.",
            tag: "p",
        },
    ],
    buttonText: "Ver Componentes",
    buttonHref: "/hero",
};
---

<Layout
    title="Sobre Nosotros"
    description="Conocé más sobre nuestra librería de componentes UI."
>
    <!-- About1 con props -->
    <Section sectionClass="py-24 bg-white">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                About1 - Con props
            </Typography>
        </div>
        <About1 {...aboutData} />
    </Section>

    <!-- About1 sin props -->
    <Section sectionClass="py-24 bg-gray-100">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                About1 - Sin props (estado por defecto)
            </Typography>
        </div>
        <About1 />
    </Section>

    <!-- About2 con props -->
    <Section sectionClass="py-24 bg-white">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                About2 - Con props
            </Typography>
        </div>
        <About2 {...aboutData2} />
    </Section>

    <!-- About2 sin props -->
    <Section sectionClass="py-24 bg-gray-100">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                About2 - Sin props (estado por defecto)
            </Typography>
        </div>
        <About2 />
    </Section>
</Layout>
