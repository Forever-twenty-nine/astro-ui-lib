---
import Layout from "../layouts/Layout.astro";
import Banner1 from "../lib/components/sections/banner/Banner1.astro";
import Banner2 from "../lib/components/sections/banner/Banner2.astro";
import Typography from "../lib/components/ui/Typography.astro";
import Section from "../lib/components/elements/Section.astro";

import heroImage from "../assets/hero-1.jpg";
---

<Layout
    title="Banners"
    description="Demostración de Banner1 y Banner2 con y sin props"
>
    <Section sectionClass="py-24 bg-white">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                Banner1 - Con props
            </Typography>
        </div>
        <Banner1
            sectionClass="py-16"
            title="Impulsa tu negocio con nuestra solución"
            description="Nuestro equipo ofrece herramientas <strong>personalizadas</strong> para tu crecimiento."
            buttonText="Ver más"
            buttonHref="#servicios"
            buttonType="button"
            image={heroImage}
            imageAlt="Ejemplo de imagen para Banner1"
        />
    </Section>

    <Section sectionClass="py-24 bg-gray-100">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                Banner1 - Sin props (estado por defecto)
            </Typography>
        </div>
        <Banner1 />
    </Section>

    <Section sectionClass="py-24 bg-white">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                Banner2 - Con props
            </Typography>
        </div>
        <Banner2
            title="Transforma tu presencia online"
            description="Creamos soluciones digitales a medida. Contactanos hoy mismo y llevá tu proyecto al siguiente nivel."
            buttonText="Conocé más"
            buttonHref="/servicios"
            image={heroImage}
            imageAlt="Ejemplo de imagen para Banner1"
        />
    </Section>
    <Section sectionClass="py-24 bg-gray-100">
        <div class="text-center mb-8">
            <Typography tag="h2" class="text-2xl font-semibold">
                Banner2 - Sin props (estado por defecto)
            </Typography>
        </div>
        <Banner2 />
    </Section>
</Layout>
