---
import Layout from "../layouts/Layout.astro";
import Container from "../lib/components/elements/Container.astro";
import Section from "../lib/components/elements/Section.astro";
import Typography from "../lib/components/ui/Typography.astro";
import Button from "../lib/components/ui/Button.astro";
import Hero3 from "../lib/components/sections/hero/Hero3.astro";
import Banner1 from "../lib/components/sections/banner/Banner1.astro";
import About3 from "../lib/components/sections/about/About3.astro";
import PortfolioCarousel from "../lib/components/sections/Portfolio/PortfolioCarousel.astro";

import heroImage from "../assets/hero-1.jpg";
---

<Layout
  title="Inicio"
  description="Componentes UI modernos y reutilizables para proyectos Astro + Tailwind"
>
  <!-- Hero de apertura -->
  <Hero3
    title="Componentes UI modernos con Astro + Tailwind"
    description="Esta librería ofrece estructuras visuales listas para producción, con soporte para animaciones, accesibilidad y personalización total."
    buttonText="Explorar Componentes"
    buttonHref="/hero"
    image={heroImage}
    animationLevel="fancy"
  />

  <!-- Banner principal -->
  <Banner1
    title="Listo para producción. Flexible por diseño."
    description="Integrá secciones como Hero, Banner o About sin preocuparte por estructuras ni estilos: todo está pensado para escalar con tu proyecto."
    buttonText="Ver ejemplos"
    buttonHref="/banner"
    image={heroImage}
    animationLevel="basic"
  />

  <!-- About de propósito -->
  <About3
    tagTitle="Nuestra Filosofía"
    title="Una librería UI enfocada en velocidad, consistencia y experiencia"
    paragraphs={[
      {
        content:
          "Construimos esta librería para resolver el problema común de reusar UI entre proyectos Astro sin comprometer diseño ni performance.",
      },
      {
        content:
          "Cada componente está diseñado para ser minimalista, accesible, animado y fácil de extender con Tailwind CSS.",
      },
    ]}
    buttonText="Ver componentes"
    buttonHref="/about"
    image={heroImage}
    animationLevel="fancy"
  />

  <PortfolioCarousel
    sectionId="preview-carousel"
    sectionClass="bg-gray-50"
    containerClass=""
    title="Componentes destacados"
    description="Deslizá para ver algunas de las secciones y elementos disponibles en FTN UI."
    items={[
      {
        title: "Secciones Hero",
        description:
          "Diseños introductorios con imagen, texto y llamados a la acción.",
        image: "https://placehold.co/600x400/4A90E2/FFFFFF?text=Hero",
        imageAlt: "Vista previa Hero",
        href: "/hero",
      },
      {
        title: "Banners Promocionales",
        description: "Bloques ideales para promociones o campañas visuales.",
        image: "https://placehold.co/600x400/50E3C2/1C1C1C?text=Banner",
        imageAlt: "Vista previa Banner",
        href: "/banner",
      },
      {
        title: "Secciones About",
        description: "Contá tu historia, equipo o misión con estilo visual.",
        image: "https://placehold.co/600x400/F5A623/000000?text=About",
        imageAlt: "Vista previa About",
        href: "/about",
      },
      {
        title: "UI Interna & Utilidades",
        description: "Tipografías, botones y elementos base reutilizables.",
        image: "https://placehold.co/600x400/1E90FF/FFFFFF?text=UI",
        imageAlt: "Vista previa UI",
        href: "/ui",
      },
    ]}
    animationLevel="fancy"
  />
</Layout>
