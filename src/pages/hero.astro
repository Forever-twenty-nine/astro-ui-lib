---
import Layout from "../layouts/Layout.astro";
import Hero1 from "../components/sections/hero/Hero1.astro";
import Hero2 from "../components/sections/hero/Hero2.astro";
import Typography from "../components/ui/Typography.astro";
import Section from "../components/elements/Section.astro";

import heroImage from "../assets/hero-1.jpg";
---

<Layout title="Heroes" description="Demostración de Hero1 y Hero2 con y sin props">
  <!-- Hero1 con props -->
  <Section sectionClass="py-16 bg-white">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero1 - Con props
      </Typography>
    </div>
    <Hero1
      title="Hero1 personalizado"
      description="Ejemplo de Hero1 con props definidas manualmente."
      buttonText="Ver más"
      buttonHref="#"
      image={heroImage}
      imageAlt="Imagen local Hero1"
    />
  </Section>

  <!-- Hero1 sin props -->
  <Section sectionClass="py-16 bg-gray-50">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero1 - Sin props (estado por defecto)
      </Typography>
    </div>
    <Hero1 />
  </Section>

  <!-- Hero2 con props -->
  <Section sectionClass="py-16 bg-white">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero2 - Con props
      </Typography>
    </div>
    <Hero2
      title="Hero2 personalizado"
      description="Ejemplo de Hero2 con props definidas manualmente."
      image={heroImage}
      imageAlt="Imagen local Hero2"
      primaryButtonText="Explorar"
      primaryButtonHref="#"
      secondaryButtonText="Más info"
      secondaryButtonHref="#"
    />
  </Section>

  <!-- Hero2 sin props -->
  <Section sectionClass="py-16 bg-gray-50">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero2 - Sin props (estado por defecto)
      </Typography>
    </div>
    <Hero2 />
  </Section>
</Layout>
