---
import Layout from "../layouts/Layout.astro";
import Hero1 from "../components/section/hero/Hero1.astro";
import Hero2 from "../components/section/hero/Hero2.astro";
import Typography from "../components/ui/Typography.astro";
import Section from "../components/elements/Section.astro";

import heroImage from "../assets/hero-1.jpg";
import heroImage2 from "../assets/hero-1.jpg"; 
---

<Layout title="Heroes" description="Componentes Hero con imagen local y remota">
  <!-- Hero1 con imagen local -->
  <Section sectionClass="py-16 bg-white">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero1 - Imagen Local
      </Typography>
    </div>
    <Hero1
      title="Hero con imagen local"
      description="Este Hero usa una imagen local optimizada con astro:assets."
      buttonText="Ver más"
      buttonHref="#"
      image={heroImage}
      imageAlt="Imagen local Hero1"
    />
  </Section>

  <!-- Hero1 con imagen remota -->
  <Section sectionClass="py-16 bg-gray-50">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero1 - Imagen Remota
      </Typography>
    </div>
    <Hero1
      title="Hero con imagen remota"
      description="Este Hero usa una imagen externa no optimizada."
      buttonText="Explorar"
      buttonHref="#"
      imageSrc="https://placehold.co/800x500/4A90E2/FFFFFF?text=Hero1+Remoto"
      imageAlt="Imagen remota Hero1"
    />
  </Section>

  <!-- Hero2 con imagen local -->
  <Section sectionClass="py-16 bg-white">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero2 - Imagen Local
      </Typography>
    </div>
    <Hero2
      title="Hero 2 con imagen local"
      description="Hero2 con imagen local optimizada."
      image={heroImage2}
      imageAlt="Imagen local Hero2"
      primaryButtonText="Explorar"
      primaryButtonHref="#"
      secondaryButtonText="Más info"
      secondaryButtonHref="#"
    />
  </Section>

  <!-- Hero2 con imagen remota -->
  <Section sectionClass="py-16 bg-gray-50">
    <div class="text-center mb-8">
      <Typography tag="h2" class="text-2xl font-semibold">
        Hero2 - Imagen Remota
      </Typography>
    </div>
    <Hero2
      title="Hero 2 con imagen remota"
      description="Hero2 con imagen remota externa."
      imageSrc="https://placehold.org/600x400/3CB371/FFFFFF?text=Hero2+Remoto"
      imageAlt="Imagen remota Hero2"
      primaryButtonText="Comenzar"
      primaryButtonHref="#"
      secondaryButtonText="Ver más"
      secondaryButtonHref="#"
    />
  </Section>
</Layout>
